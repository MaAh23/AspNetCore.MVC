    <div class="account-buttons">
        <a class="btn-gray" asp-action="Index" asp-controller="Signin"><i class="fa-solid fa-right-to-bracket"></i><span>Sign in</span></a>
        <a class="btn-theme" asp-action="Index" asp-controller="Signup"><i class="fa-solid fa-user"></i><span>Sign up</span></a>
    </div>
