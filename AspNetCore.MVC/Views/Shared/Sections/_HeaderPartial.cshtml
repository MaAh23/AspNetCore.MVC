<div class="container">
    <a class="logo" asp-action="Index" asp-controller="Home"><img src="images/silicon-logo.svg" alt=""></a>
    <div class="menu">
        <nav>
            <a class="menu-link" asp-action="Index" asp-controller="Home" asp-fragment="showcase">Showcase</a>
            <a class="menu-link" asp-action="Index" asp-controller="Home" asp-fragment="features">Features</a>
            <a class="menu-link" asp-action="Index" asp-controller="Contact">Contact</a>
        </nav>
    </div>
    <div class="btn-switch">
        <label>Light</label>
        <label class="Switch" for="switch-mode">
